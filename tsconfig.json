{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@services/*": [
        "app/services/*"
      ],
      "@actions/*": [
        "app/actions/*"
      ],
      "@reducers": [
        "app/reducers"
      ],
      "@reducers/*": [
        "app/reducers/*"
      ],
      "@models/*": [
        "app/models/*"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
